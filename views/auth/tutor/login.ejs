<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <form action="/auth/tutor/login" method="POST" class="mb-5">
        <div class="form-group">
          <label for="tutorEmail">Email</label>
          <input id="tutorEmail" class="form-control" type="email" name="email" placeholder="name@email.com">
        </div>
        <div class="form-group">
          <label for="tutorPassword">Password</label>
          <input id="tutorPassword" class="form-control" type="password" name="password" placeholder="**********">
        </div><br>
        <a class="align-text-top" href="/auth/tutor/forgot">Forgot password?</a>
        <button class="btn btn-primary float-right" type="submit" style="cursor:pointer;">Sign in</button>
      </form>
    </div>
  </div>
</div>